<link rel="stylesheet" href="/css/new1_css.css">

<div id='content'>
    <div class='new'>
{{#article}}
    <form class="container" action="/recipe/update" method="post">
        <input name="id" type="hidden" value="{{id}}" />
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title" value="{{title}}">
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" rows="13" name="content">{{content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">완료</button>
        <a href="/recipe/{{id}}" class="button btnPush btnRed">뒤로</a>
    </form>
{{/article}}
